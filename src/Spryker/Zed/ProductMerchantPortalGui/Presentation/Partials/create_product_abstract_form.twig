{% form_theme form '@ZedUi/Form/form-webcomponent-layout.twig' %}

{% block body %}
    {% set mainClass = 'mp-edit-abstract-product' %}

    {{ form_start(form, {attr: {excludeFormTag: true}}) }}

        {% block action %}
            <web-spy-button size="lg" type="submit" action>{{ 'Next' | trans }}</web-spy-button>
        {% endblock %}

        <web-spy-card spy-title="{{ form.sku.vars.label | trans }} {{ form.sku.vars.required ? '*' }}" class="{{ mainClass }}__card">
            {{ form_row(form.sku, {label: false, row_attr: {'no-spaces': 'true'}}) }}
        </web-spy-card>

        <web-spy-card spy-title="{{ form.name.vars.label | trans }} {{ form.name.vars.required ? '*' }}" class="{{ mainClass }}__card">
            {{ defaultLocaleCode | default }}
            {{ form_row(form.name, {label: false, row_attr: {'no-spaces': 'true'}}) }}
        </web-spy-card>

        <web-spy-card spy-title="{{ form.isSingleConcrete.vars.label | trans }} {{ form.isSingleConcrete.vars.required ? '*' }}" class="{{ mainClass }}__card">
            {# use radio #}
            {{ form_row(form.isSingleConcrete, {label: false, row_attr: {'no-spaces': 'true'}}) }}
        </web-spy-card>

    {{ form_end(form) }}

{% endblock %}
