{% block body %}
    {# TODO: dump data, should be changed when BE will be ready  #}
    {% set productData = {
        name: 'Producct Name',
        sku: 'sku #002002',
    } %}

    {% block editProduct %}
        <web-mp-edit-abstract-product product="{{ productData | json_encode() }}" cloak>
            {% block action %}
                <web-spy-button size="lg" type="submit" action>{{ 'Save' | trans }}</web-spy-button>
            {% endblock %}

            {% block tabs %}
                <web-spy-tabs cloak>
                    {% block detailTab %}
                        <web-spy-tab spy-title="{{ 'Product Details' | trans }}">
                            <web-mp-offer-prices-table
                                cloak
                                table-id="web-mp-product-list"
                                config='{{ guiTableConfiguration(priceProductAbstractTableConfiguration) }}'>
                            </web-mp-offer-prices-table>
                        </web-spy-tab>
                    {% endblock %}

                    {% block variantsTab %}
                        <web-spy-tab spy-title="{{ 'Variants' | trans }}"></web-spy-tab>
                    {% endblock %}
                </web-spy-tabs>
            {% endblock %}
        </web-mp-edit-abstract-product>
    {% endblock %}
{% endblock %}
